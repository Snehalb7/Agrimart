                    </div>
                     
                    <div class="form-group">
			           
                       <div class="col-md-3">
                       <label class="control-label">Pincode</label>
                       </div>
                       <div class="col-md-9">
                        <%= f.text_field :pincode , :class => "form-control"%> <br>
                       </div>
                    </div>
                     
                    <div class="form-group">
			          <div class="col-md-6">
			            <label class="control-label">Telephone number</label>                      
			          </div>
                      <div class="col-md-6">
                         <%= f.text_field :phone_no, :class => "form-control" %>
                      </div>
                    </div><br>
   
<p>                   
    <%= f.submit "SignUp" , :class => "btn btn-info square-btn-adjust" %> <br>
</p>                    


<%end%>

                
                
                
                </div>			    	
		      </div>		      
		
						</section>
						
					</div><!-- /page-inner -->
				</div><!-- /page-left -->
				<a href="#" class="back back-right" title="back to intro">&rarr;</a>
				<a href="#" class="back back-left" title="back to intro">&larr;</a>
			</div><!-- /splitlayout -->
		</div><!-- /container -->
		<script src="assets/signup/classie.js"></script>
		<script src="assets/signup/cbpSplitLayout.js"></script>
	</body>
</html>
